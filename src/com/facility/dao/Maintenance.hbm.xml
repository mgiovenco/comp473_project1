<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.facility.model">
    <class name="com.facility.model.MaintenanceImpl" table="maintenance">
        <id name="id" type="int">
            <column name="id" />
            <generator class="native" >
                <param name="sequence">id</param>
            </generator>
        </id>
        <property name="maintenanceDescription" type="string" column="maintenance_description"/>
        <property name="lastOccurenceDateTime" type="timestamp" column="last_occurence_datetime"/>
        <property name="maintenanceCost" type="java.math.BigDecimal" column="maintenance_cost"/>
        <property name="status" type="string" column="status"/>
        <property name="recommendedOccurenceRate" type="string" column="recommended_occurence_rate"/>
    </class>
</hibernate-mapping>

