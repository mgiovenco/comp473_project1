<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.facility.model">
    <class name="com.facility.model.InspectionImpl" table="inspection">
        <id name="id" type="int">
            <column name="id" />
            <generator class="native" >
                <param name="sequence">id</param>
            </generator>
        </id>
        <property name="type" type="string" column="type"/>
        <property name="requestedDateTime" type="timestamp" column="request_datetime"/>
        <property name="inspectionDateTime" type="timestamp" column="inspection_datetime"/>
        <property name="status" type="string" column="status"/>
    </class>
</hibernate-mapping>

